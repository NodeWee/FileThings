            "asf",
            "avi",
            "divx",
            "evo",
            "f4v",
            "flv",
            "h264",
            "h265",
            "hevc",
            "m1v",
            "m2v",
            "m4v",
            "mkv",
            "mov",
            "mp4",
            "mpeg",
            "mpg",
            "mts",
            "mxf",
            "ogm",
            "ogv",
            "rm",
            "rmvb",
            "ts",
            "vob",
            "webm",
            "wmv"
        ]
    },
    "variables": [
